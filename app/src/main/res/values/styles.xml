<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="android:colorBackground">@color/primaryLight</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/secondaryDark</item>
        <item name="colorControlHighlight">@color/secondaryLight</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/gray</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColor">@color/gray</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>

    <style name="HeadingText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
    </style>
    <style name="SubHeading">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="buttons">
        <item name="android:background"></item>
    </style>
</resources>
